<div id="new-form-modal-body" class="modal-body">
  <fieldset>
    <div class="form-group">
      <%= f.label :name, :class => "col-lg-2 control-label" %>
      <br />
      <%= f.text_field :name, :autofocus => true, :required => true, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone, :class => "col-lg-2 control-label" %>
      <br />
      <%= f.telephone_field :phone, :required => true, :class => "form-control" %>
    </div>
  </fieldset>
</div>
